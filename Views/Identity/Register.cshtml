@model Models.DataTransferObjects.RegisterDTO

@{
    ViewData["Title"] = "Register";
}

<div class="auth-wrapper">
    <div class="auth d-flex justify-content-center align-items-center flex-column">
        <h3>Sign up</h3>
        <form method="post" asp-action="Register" asp-controller="Identity">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Username">Username</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pass">Password</label>
                <input type="password" asp-for="Pass" class="form-control" />
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsBusinessUser">Business User</label>
                <input class="form-check-input" type="checkbox" asp-for="IsBusinessUser" />
                <span asp-validation-for="IsBusinessUser" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-2">Register</button>
        </form>
    </div>
</div>

<style>
    auth-wrapper {
        min-height: calc(100vh - 100px);
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .auth {
        padding: 50px;
        width: 500px;
        box-shadow: 0 0 2px 1px #f1f1f1;
        margin: 25px auto;
        color: white;
        border-radius: 15px;
    }

        .auth input[type="text"], .auth input[type="password"], .auth input[type="submit"], .auth input[type="email"] {
            display: block;
            padding: 10px;
            margin: 15px auto;
            min-width: 250px;
        }

        .auth input[type="submit"] {
            background-color: cornflowerblue;
            color: white;
        }

            .auth input[type="submit"]:hover {
                opacity: 0.9;
            }

        .auth span {
            margin-bottom: 30px;
        }
</style>
