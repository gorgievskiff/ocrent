@model User

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Login" asp-controller="Identity">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Username">Username</label>
                <input asp-for="Username" class="form-control" />
                <span asp-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pass">Password</label>
                <input asp-for="Pass" class="form-control" />
                <span asp-for="Pass" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-2">Login</button>
        </form>

    </div>
</div>
